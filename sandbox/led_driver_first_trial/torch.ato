import LedDriver from "LT3477.ato"
import Led from "XL-C3570P8S11-62C3C2.ato"

module LedModule:
    # a 3-LED module
    led1 = new Led
    led2 = new Led
    led3 = new Led

    signal positive ~ led1.positive
    signal negative ~ led3.negative

    led1.negative ~ led2.positive
    led2.negative ~ led3.positive

    positive.visualizer.location = "top"
    negative.visualizer.location = "bottom"

module Torch:
    driver = new LedDriver
    led = new LedModule
